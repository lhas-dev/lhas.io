---
import '../styles/global.css';
import 'balloon-css';
import { Header } from '@/components/Header';
import { Hero } from '@/components/Hero';
import { Navigation } from '@/components/Navigation';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Primary Meta Tags -->
		<title>Luiz Almeida - Front-end Engineer | React, TypeScript, Next.js</title>
		<meta name="title" content="Luiz Almeida - Front-end Engineer | React, TypeScript, Next.js" />
		<meta name="description" content="Specialist Front-end Engineer with 10+ years building scalable web and mobile applications. Expert in React, TypeScript, Next.js, and React Native. Based in Brazil (LATAM)." />
		<meta name="keywords" content="Front-end Engineer, React Developer, TypeScript, Next.js, React Native, Web Development, Mobile Development, JavaScript, Brazil, LATAM, Full Stack Developer" />
		<meta name="author" content="Luiz Almeida" />
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href="https://lhas.io/" />
		<meta name="theme-color" content="#000000" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://lhas.io/" />
		<meta property="og:title" content="Luiz Almeida - Front-end Engineer | React, TypeScript, Next.js" />
		<meta property="og:description" content="Specialist Front-end Engineer with 10+ years building scalable web and mobile applications. Expert in React, TypeScript, Next.js, and React Native." />
		<meta property="og:image" content="https://lhas-io.vercel.app/me3.jpg" />
		<meta property="og:site_name" content="Luiz Almeida Portfolio" />
		<meta property="og:locale" content="en_US" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://lhas.io/" />
		<meta property="twitter:title" content="Luiz Almeida - Front-end Engineer | React, TypeScript, Next.js" />
		<meta property="twitter:description" content="Specialist Front-end Engineer with 10+ years building scalable web and mobile applications. Expert in React, TypeScript, Next.js, and React Native." />
		<meta property="twitter:image" content="https://lhas-io.vercel.app/me3.jpg" />
		<meta property="twitter:creator" content="@lhas_js" />
		<meta property="twitter:site" content="@lhas_js" />

		<!-- Additional SEO Meta Tags -->
		<meta name="language" content="English" />
		<meta name="revisit-after" content="7 days" />
		<meta name="distribution" content="global" />
		<meta name="rating" content="general" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />

		<!-- Geo Tags -->
		<meta name="geo.region" content="BR" />
		<meta name="geo.placename" content="Brazil" />

		<!-- Format Detection -->
		<meta name="format-detection" content="telephone=no" />

		<!-- Additional Open Graph -->
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:alt" content="Luiz Almeida - Front-end Engineer" />

		<!-- JSON-LD Structured Data -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Luiz Almeida",
				"url": "https://lhas.io/",
				"image": "https://lhas-io.vercel.app/me3.jpg",
				"sameAs": [
					"https://twitter.com/lhas_js",
					"https://github.com/lhas",
					"https://linkedin.com/in/lhas"
				],
				"jobTitle": "Front-end Engineer",
				"worksFor": {
					"@type": "Organization",
					"name": "Freelance"
				},
				"knowsAbout": ["React", "TypeScript", "Next.js", "React Native", "JavaScript", "Web Development", "Mobile Development"],
				"description": "Specialist Front-end Engineer with 10+ years building scalable web and mobile applications. Expert in React, TypeScript, Next.js, and React Native. Based in Brazil (LATAM)."
			}
		</script>
	</head>
	<body>
		<Header client:idle />

		<Hero client:idle />

		<div class="container mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-8 space-y-8 fixed bottom-0 left-0 right-0">
			<Navigation client:idle />
		</div>
	</body>
</html>
